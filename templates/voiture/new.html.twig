{% extends 'admin.html.twig' %}

{% block title %}New Voiture{% endblock %}

{% block body %}


    <div class="container">
        <br>
        {{ include('voiture/_form.html.twig') }}
    </div>



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style src="{{asset('assets/css/bootstrap-datepicker3.css')}}"></style>
    <script>
        $(document).ready(function(){



            var date_input=$('#voiture_dispoAt'); //our date input has the name "myrosterdate"
            var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
            var options={
                multidate:true,
                format: 'yyyy-mm-dd',
                container: container,
                todayHighlight: true,
                autoclose: false,
            };
            date_input.datepicker(options);

            $("#voiture_destiner").click(function(){
                alert('test ok')

               if($("#voiture_destiner").val() === 'location'){
                   $("#tarif1").show();
                   $("#tarif2").show();
                   $("#dispo2").show();
                   $("#dispo1").show();
                   $("#dispo11").show();
                   $("#voiture_villeL").show();
                   $("#voiture_villeL").show();
                   $("#dispo11").show();
                   $("#louer").show();

               } else if ($("#voiture_destiner").val() === 'vente') {
                   $("#tarif1").hide();
                   $("#tarif2").hide();
                   $("#dispo11").hide();
                   $("#dispo1").hide();
                   $("#dispo2").hide();
                   $("#voiture_villeL").hide();
                   $("#dispo11").hide();
                   $("#louer").hide();
                   $("#vendu1").show()
               } else {

               }

            });
        });
    </script>
{% endblock %}
