{% extends 'admin.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}


    <div class="container-fluid">
        <h1>Détail Client</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Téléphone:</th>
                <td>{{ client.telephone }}</td>
            </tr>
            <tr>
                <th>Mail:</th>
                <td>{{ client.mail }}</td>
            </tr>
            <tr>
                <th>Disponibilité:</th>
                <td>{{ client.disponibiliter}}</td>
            </tr>
            <tr>
                <th>Heure de rappel:</th>
                <td>{{ client.rappelAt|date("m/d/Y H:i:s")}}</td>
            </tr>

            <tr>
                <th>Ville:</th>
                <td>{{ client.ville }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
