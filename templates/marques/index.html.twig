{% extends 'admin.html.twig' %}

{% block title %}Marques index{% endblock %}

{% block body %}
    <h1>Marques Voiture</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.id }}</td>
                <td>{{ marque.name }}</td>
                <td>
                    <a href="{{ path('marques_show', {'id': marque.id}) }}">show</a>
                    <a href="{{ path('marques_edit', {'id': marque.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('marques_new') }}">Create new</a>
{% endblock %}
