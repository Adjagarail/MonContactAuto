{% extends 'base.html.twig' %}

{% block title %}Condition index{% endblock %}

{% block body %}
    <h1>Condition index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for condition in conditions %}
            <tr>
                <td>{{ condition.id }}</td>
                <td>{{ condition.text }}</td>
                <td>
                    <a href="{{ path('condition_show', {'id': condition.id}) }}">show</a>
                    <a href="{{ path('condition_edit', {'id': condition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('condition_new') }}">Create new</a>
{% endblock %}
