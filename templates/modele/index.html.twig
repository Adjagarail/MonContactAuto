{% extends 'admin.html.twig' %}

{% block title %}Modele index{% endblock %}

{% block body %}

    <div class="container">
        <br>
        <br>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for modele in modeles %}
                <tr>
                    <td>{{ modele.id }}</td>
                    <td>{{ modele.name }}</td>
                    <td>
                        <a href="{{ path('modele_show', {'id': modele.id}) }}">Voir détail</a>
                        <a href="{{ path('modele_edit', {'id': modele.id}) }}">modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('modele_new') }}" class="btn btn-success">Ajouter modèle</a>
        <br>
        <br>
    </div>
{% endblock %}
