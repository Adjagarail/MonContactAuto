{% extends 'base.html.twig' %}

{% block title %}New Recherche{% endblock %}

{% block body %}

    <section class="page-header listing_page">
        <div class="container">
            <div class="page-header_wrap">
                <div class="page-heading">
                    <h1>Formulaire de recherche de véhicule</h1>
                </div>
                <ul class="coustom-breadcrumb">
                    <li><a href="{{ path('home') }}">Accueil</a></li>
                    <li>Formulaire de recherche de véhicule</li>
                </ul>
            </div>
        </div>
        <!-- Dark Overlay-->
        <div class="dark-overlay"></div>
    </section>
    <br>
    <br>
    <div class="container">
        <div class="dealer_contact_info gray-bg" style="border: 2px solid red;">
            <h6 style="color: red !important;"><i class="fa fa-info-circle" aria-hidden="true"></i> Condition</h6>
            {% for condition in conditions %}
            <a href="mailto:contact@example.com">{{ condition.contenu }}</a>
            {% endfor %}
        </div>
    </div>
    {{ include('recherches/_form.html.twig') }}
    <br>
    <br>

    <script src="{{asset('assets/js/jquery.min.js')}}"></script>
    <script>

        $(document).ready(function () {
            $('#recherche_modele').select2({
                dropdownAutoWidth: true,
                dropdownCssClass: 'form-control'
            });
            $('#recherche_marques').select2({
                dropdownAutoWidth: true,
                dropdownCssClass: 'form-control'
            });
            $('#recherche_options').select2({
                dropdownAutoWidth: true,
                dropdownCssClass: 'form-control'
            });

        })
    </script>
    <style>
        #recherche_modele {
            background: #eeeeee none repeat scroll 0 0 !important;
            border: 0 none;
            border-radius: 3px;
            box-shadow: none;
            color: #888888;
            font-size: 15px;
            height: 46px;
            line-height: 30px;
            padding: 0 15px;
        }
    </style>


{% endblock %}
